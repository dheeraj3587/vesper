// Nested loops and control structures example
int matrix_sum = 0;
int i = 0;
int j = 0;

// Nested loops simulation (since we don't have arrays yet)
for (int row = 0; row < 3; row = row + 1) {
    for (int col = 0; col < 3; col = col + 1) {
        // Simulate matrix[row][col] = row * col
        int value = row * col;
        matrix_sum = matrix_sum + value;
        
        // Conditional inside nested loops
        if (value > 2) {
            value = value * 2;
        }
    }
}

// Combined control structures
int counter = 10;
while (counter > 0) {
    if (counter > 5) {
        for (int k = 0; k < 2; k = k + 1) {
            counter = counter - 1;
        }
    } else {
        counter = counter - 1;
    }
} 